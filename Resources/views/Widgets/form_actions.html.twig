{% macro create() %}
    <div class="form-group">
        <div class="col-md-3">
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-success">Create</button>
            <a href="{{ app.request.headers.get('referer') }}" class="btn default">Cancel</a>
        </div>
    </div>
{% endmacro %}

